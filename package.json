{
  "name": "goshule-backend",
  "version": "1.0.0",
  "description": "Backend for Goshule (School Transport) using Prisma, Express, and PostgreSQL.",
  "main": "./server.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon ./server.js",
    "start": "node ./server.js",
    "build": "echo 'No build step needed for Express backend'",
    "postinstall": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio",
    "prisma:seed": "node prisma/seed.js",
    "seed": "node prisma/seed.js",
    "reset": "prisma migrate reset --force --skip-generate --skip-seed && npm run prisma:migrate && npm run seed"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^4.2.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/xlsx": "^0.0.35",
    "nodemon": "^3.0.1",
    "prisma": "^5.22.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NyagaOtieno/schooltransport.git"
  },
  "bugs": {
    "url": "https://github.com/NyagaOtieno/schooltransport/issues"
  },
  "homepage": "https://github.com/NyagaOtieno/schooltransport#readme",
  "keywords": [
    "express",
    "prisma",
    "postgresql",
    "school-transport",
    "backend",
    "api",
    "railway"
  ],
  "author": "Kennedy Otieno",
  "license": "ISC",
  "engines": {
    "node": ">=18.x"
  }
}
