generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id        Int      @id @default(autoincrement())
  name      String
  logoUrl   String?
  address   String?
  phone     String?
  mode      AppMode  @default(KID)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  buses       Bus[]
  students    Student[]
  users       User[]
  assets      Asset[]
  parents     Parent[]
  clients     Client[]
  panicEvents PanicEvent[]
}

model User {
  id       Int     @id @default(autoincrement())
  name     String
  email    String
  phone    String?
  role     Role
  password String

  tenantId Int?
  tenant   Tenant? @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  parent Parent? @relation("UserToParent")
  client Client? @relation("UserToClient")

  resetOtp          String?
  resetOtpExpiresAt DateTime?
  resetOtpSentAt    DateTime?

  // Keep Bus Assistant relation as-is
  driverBuses        Bus[]      @relation("DriverBus")
  assistantBuses     Bus[]      @relation("AssistantBus")
  assistantManifests Manifest[] @relation("AssistantManifest")

  student     Student?     @relation("UserStudent")
  panicEvents PanicEvent[] @relation("UserToPanicEvents")

  // delivery confirmation users
  deliveredAssets Asset[] @relation("AssetDeliveredBy")
  confirmedAssets Asset[] @relation("AssetConfirmedBy")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([email, tenantId])
  @@unique([phone, tenantId])
}

model Parent {
  id       Int   @id @default(autoincrement())
  tenantId Int
  userId   Int?  @unique
  user     User? @relation("UserToParent", fields: [userId], references: [id], onDelete: SetNull)

  students      Student[]
  notifications Notification[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
}

model Client {
  id       Int   @id @default(autoincrement())
  tenantId Int
  userId   Int?  @unique
  user     User? @relation("UserToClient", fields: [userId], references: [id], onDelete: SetNull)

  assets        Asset[]
  notifications Notification[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
}

model Bus {
  id          Int      @id @default(autoincrement())
  name        String
  plateNumber String
  capacity    Int
  route       String
  driverId    Int?
  assistantId Int?
  createdAt   DateTime @default(now())
  tenantId    Int
  updatedAt   DateTime @updatedAt

  // âœ… unchanged busassistant relation
  assistant User? @relation("AssistantBus", fields: [assistantId], references: [id], onDelete: SetNull)
  driver    User? @relation("DriverBus", fields: [driverId], references: [id], onDelete: SetNull)

  tenant        Tenant         @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  locations     BusLocation[]
  liveLocations LiveLocation[]
  manifests     Manifest[]
  students      Student[]
  assets        Asset[]

  @@unique([tenantId, plateNumber])
}

model Student {
  id        Int      @id @default(autoincrement())
  name      String
  grade     String
  latitude  Float
  longitude Float
  busId     Int
  parentId  Int?
  tenantId  Int
  userId    Int?     @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  bus    Bus    @relation(fields: [busId], references: [id], onDelete: Cascade)
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  parent Parent? @relation(fields: [parentId], references: [id], onDelete: SetNull)
  user   User?   @relation("UserStudent", fields: [userId], references: [id], onDelete: SetNull)

  manifests   Manifest[]
  panicEvents PanicEvent[]
}

model Asset {
  id        Int      @id @default(autoincrement())
  name      String
  type      String?
  tag       String?
  busId     Int?
  clientId  Int?
  tenantId  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  deliveryStatus AssetDeliveryStatus @default(IN_TRANSIT)
  deliveredAt    DateTime?
  confirmedAt    DateTime?

  deliveredByUserId Int?
  deliveredByUser   User? @relation("AssetDeliveredBy", fields: [deliveredByUserId], references: [id], onDelete: SetNull)

  confirmedById Int?
  confirmedBy   User? @relation("AssetConfirmedBy", fields: [confirmedById], references: [id], onDelete: SetNull)

  tenant Tenant  @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  client Client? @relation(fields: [clientId], references: [id], onDelete: SetNull)
  bus    Bus?    @relation(fields: [busId], references: [id], onDelete: SetNull)

  manifests   Manifest[]
  panicEvents PanicEvent[]
}

model Manifest {
  id            Int             @id @default(autoincrement())
  studentId     Int?
  assetId       Int?
  busId         Int
  assistantId   Int?
  date          DateTime        @default(now())
  latitude      Float?
  longitude     Float?
  boardingTime  DateTime?
  alightingTime DateTime?
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  status        ManifestStatus
  session       ManifestSession @default(MORNING)

  assistant User?    @relation("AssistantManifest", fields: [assistantId], references: [id], onDelete: SetNull)
  bus       Bus      @relation(fields: [busId], references: [id], onDelete: Cascade)
  student   Student? @relation(fields: [studentId], references: [id], onDelete: SetNull)
  asset     Asset?   @relation(fields: [assetId], references: [id], onDelete: SetNull)

  @@index([studentId])
  @@index([assetId])
}

model Notification {
  id       Int      @id @default(autoincrement())
  parentId Int?
  clientId Int?
  title    String
  message  String
  type     String
  sentAt   DateTime @default(now())
  read     Boolean  @default(false)

  parent Parent? @relation(fields: [parentId], references: [id], onDelete: Cascade)
  client Client? @relation(fields: [clientId], references: [id], onDelete: Cascade)
}

model BusLocation {
  id         Int      @id @default(autoincrement())
  busId      Int
  deviceId   Int
  lat        Float
  lng        Float
  direction  Int?
  speed      Float?
  state      String?
  movement   String?
  lastUpdate DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  bus Bus @relation(fields: [busId], references: [id], onDelete: Cascade)
}

model LiveLocation {
  id            Int      @id @default(autoincrement())
  vehicleReg    String   @unique
  busId         Int?
  lat           Float
  lng           Float
  direction     Float
  speed         Float?
  movementState String?
  lastUpdate    DateTime
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  bus Bus? @relation(fields: [busId], references: [id], onDelete: SetNull)
}

model PanicEvent {
  id       Int  @id @default(autoincrement())
  userId   Int
  childId  Int?
  assetId  Int?
  tenantId Int

  latitude    Float
  longitude   Float
  phoneNumber String?
  role        Role
  ipAddress   String?
  userAgent   String?
  status      PanicStatus
  createdAt   DateTime    @default(now())
  createdBy   String

  user   User     @relation(fields: [userId], references: [id], name: "UserToPanicEvents", onDelete: Cascade)
  child  Student? @relation(fields: [childId], references: [id], onDelete: SetNull)
  asset  Asset?   @relation(fields: [assetId], references: [id], onDelete: SetNull)
  tenant Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([childId])
  @@index([assetId])
  @@index([tenantId])
}

enum Role {
  ADMIN
  DRIVER
  ASSISTANT
  PARENT
  CLIENT
  MERCHANT
}

enum ManifestStatus {
  CHECKED_IN
  CHECKED_OUT
}

enum ManifestSession {
  MORNING
  EVENING
}

enum PanicStatus {
  ACTIVE
  PENDING
  ACKNOWLEDGED
  RESOLVED
  CONFIRMED
}

enum AppMode {
  KID
  ASSET
}

enum AssetDeliveryStatus {
  IN_TRANSIT
  DELIVERED
  CONFIRMED
  CANCELLED
}
